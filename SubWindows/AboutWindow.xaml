<Window x:Class="Wad3_Viewer.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wad3_Viewer"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="{DynamicResource About}" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="{DynamicResource Title}" Margin="15" TextAlignment="Center" Background="LightCoral"></TextBlock>
            <TextBlock Text="{DynamicResource Auth}" Margin="5" TextAlignment="Center" ></TextBlock>
            <TextBlock Text="{DynamicResource Version}" Margin="5" TextAlignment="Center" ></TextBlock>
            <Button Content="{DynamicResource Confirm}" Width="70" Height="25" Margin="10" Click="Confirm_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
